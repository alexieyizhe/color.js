{
  "name": "color.js",
  "version": "1.0.0",
  "description": "Extract image colors with JavaScript. Supports DOM elements and (external) URL's.",
  "homepage": "https://github.com/luukdv/color.js",
  "repository": "luukdv/color.js",
  "bugs": "https://github.com/luukdv/color.js/issues",
  "license": "MIT",
  "author": {
    "name": "Luuk de Vlieger",
    "email": "info@luuk.site",
    "url": "https://www.luuk.site"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "average",
    "browser",
    "canvas",
    "color",
    "colors",
    "electron",
    "extract",
    "image",
    "palette",
    "photo",
    "picture",
    "rgb",
    "sample"
  ],
  "main": "dist/color.cjs.js",
  "module": "dist/color.esm.js",
  "types": "dist/color.d.ts",
  "sideEffects": false,
  "scripts": {
    "build:browser": "rollup src/index.js -o dist/color.browser.js -f iife -n colorjs --no-esModule",
    "build:cjs": "rollup src/index.js -o dist/color.cjs.js -f cjs",
    "build:esm": "rollup src/index.js -o dist/color.esm.js -f es",
    "build": "rimraf dist && run-p build:browser build:cjs build:esm",
    "format": "prettier --write '**/*.{js,json,ts}'",
    "prepublishOnly": "npm test && npm run build",
    "test:cypress": "cypress open",
    "test:server": "http-server -p 9000 ./test",
    "test": "run-p test:cypress test:server"
  },
  "dependencies": {},
  "devDependencies": {
    "cypress": "^5.4.0",
    "http-server": "^0.12.3",
    "npm-run-all": "^4.1.5",
    "rollup": "^2.32.0"
  }
}
